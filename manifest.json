{

  "name": "BookmarksReminder",

  "version": "0.0.1",
  "description": "A browser action with a popup dump of all bookmarks.",
  "permissions": [
    "bookmarks",
    "storage",
    "alarms"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "browser_action": {
      "default_title": "BookmarksReminder",
      "default_popup": "templates/index.html"
  },

  "manifest_version": 2,

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"

}
